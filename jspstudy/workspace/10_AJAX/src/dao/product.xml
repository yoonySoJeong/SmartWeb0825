<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="dao.product">	<!-- package.filename -->

	<!-- 1. 제품 목록 -->
	<select id="selectList" resultType="dto.Product">	<!-- package.Class -->
		SELECT pno, name, price, made
		  FROM product
		 ORDER BY pno
	</select>

	<!-- 2. 제품명 중복 체크 -->
	<select id="nameCheck" resultType="dto.Product">
		SELECT pno
		  FROM product
		 WHERE name = #{name}
	</select>
	
	<!-- 3. 제품 등록 -->
	<insert id="insert"	parameterType="dto.Product">
		INSERT INTO product
		VALUES (product_seq.nextval, #{name}, #{price}, SYSDATE)
	</insert>
	
	<!-- 4. 마지막 등록 제품 -->
	<!-- 
		SELECT name
		  FROM product
		 WHERE pno = (SELECT MAX(pno) FROM product)
	 -->
	<select id="prevInsertname" resultType="dto.Product">
		SELECT a.name
		  FROM (SELECT name
		  		  FROM product
		  		 ORDER BY made DESC) a
		 WHERE ROWNUM = 1
	</select>

	<!-- 5. 제품 삭제 -->
	<delete id="delete" parameterType="Long">
		DELETE
		  FROM product
		 WHERE pno = #{pno}
	</delete>

	<!-- 내가 작성 : 전체 제품 수
	<select id="getTotalItems" resultType="int">
		SELECT COUNT(*)
		  FROM product
	</select>
	 -->


</mapper>