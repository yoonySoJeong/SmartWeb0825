<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd" >

<configuration>
	<!-- 접속 주소는 hikari, mapper의 위치는 그 밑에 bean이 하므로 지움 -->
	<settings>
	  <setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<!-- 별명정하는 것. 이름이 기니까 줄여서 별명으로 쓸게 typeAliases:typeAlias -->
	<typeAliases>
		<typeAlias type="com.koreait.ex15.domain.Member" alias="Member" />
		<typeAlias type="com.koreait.ex15.domain.Board" alias="Board" />
		<typeAlias type="com.koreait.ex15.domain.BoardAttach" alias="BoardAttach" />
	</typeAliases>
	
	
</configuration>